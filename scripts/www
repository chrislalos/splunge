#!/usr/bin/env bash -x

DEFAULT_PORT=1313
port=${1:-$DEFAULT_PORT}
echo "\$port=$port"
echo Running splunge on port $port... 

logFolder="~/tmp/splunge/log"
mkdir -p "$logFolder/"

gunicorn --bind localhost:$port \
         --access-logfile "$logFolder/access.log" \
         --error-logfile "$logFolder/errors.log" \
         --workers 3 \
         --umask 007 \
         --reload \
         splunge.app:app